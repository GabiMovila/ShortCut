
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/linearLayout_register"
>
    <ImageView
        android:src="@drawable/shortcutLogo"
        android:layout_width="wrap_content"
        android:id="@+id/shortcutLogo_register"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingTop="15dp"
        android:cropToPadding="true"
        android:layout_marginTop="0.0dp" />
    <TextView
        android:text="Full Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_reg_name"
        android:paddingLeft="38dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="10dp" 
         />
     <EditText
        android:inputType="textPersonName"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:id="@+id/textIn_reg_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:hint="Catalin Vacar"
        android:textColor="#ffffffff"
        android:background="@layout/rounded_corners_text"
        android:elegantTextHeight="false"
        android:textAlignment="center"
         />
    <TextView
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_reg_email"
        android:paddingLeft="38dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="10dp" 
         />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:id="@+id/textIn_reg_email"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:hint="catalin@fabricadelapte.ro"
        android:textColor="#ffffffff"
        android:background="@layout/rounded_corners_text"
        android:elegantTextHeight="false"
        android:textAlignment="center"
         />
    <TextView
        android:text="Phone Number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_reg_phone"
        android:paddingLeft="38dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="10dp" 
         />
    <EditText
        android:inputType="phone"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:id="@+id/textIn_reg_phone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:hint="0740000000"
        android:textColor="#ffffffff"
        android:background="@layout/rounded_corners_text"
        android:elegantTextHeight="false"
        android:textAlignment="center"
         />
    <TextView
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_reg_pass"
        android:paddingLeft="38dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="10dp" 
         />
    <EditText
        android:inputType="textPassword"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:id="@+id/textIn_reg_pass"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:hint="********"
        android:textColor="#ffffffff"
        android:background="@layout/rounded_corners_text" 
        android:textAlignment="center"
         />
    <TextView
        android:text="Confirm password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_reg_conf_pass"
        android:paddingLeft="38dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="5dp" 
         />
    <EditText
        android:inputType="textPassword"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:id="@+id/textIn_reg_conf_pass"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:hint="********"
        android:textColor="#ffffffff"
        android:background="@layout/rounded_corners_text" 
        android:textAlignment="center"
         />
    <TextView
        android:text="Account type"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_reg_acc_type"
        android:paddingLeft="38dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="10dp" 
         />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_acc_type"
        android:layout_marginLeft="35dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Customer"
            android:id="@+id/radioButton_customer"
            android:textColor="#ffffffff" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barber"
            android:id="@+id/radioButton_barber"
            android:textColor="#ffffffff" />
    </RadioGroup>

    <Button
        android:text="REGISTER"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:id="@+id/buttonRegister"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:background="@layout/rounded_corners_button" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:src="@drawable/hasaccount"
        android:id="@+id/button_hasAccount"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="5dp" />

</LinearLayout>